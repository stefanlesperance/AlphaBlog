<div id = "page-content">
<h1 class = "text-center mt-4">Showing All Articles</h1>


<% @articles.each do |article|  %>
<div class = "container ">
	<div class="row justify-content-center">
		<div class="col-8 mt-4">
				<div class="card text-center shadow mb-5 bg-white rounded">
					<div class="card-header fst-italic">
						By Stefan L'Esperance
					</div>
					<div class="card-body">
						<h5 class="card-title"><%= link_to article.title, article_path(article), class: "text-success" %></h5>
						<p class="card-text"><%= truncate(article.description, length: 100) %></p>
						<div class="btn-group" role="group" aria-label="Basic example">
							<%= button_to 'Show', article_path(article), method: :get, class: "btn btn-outline-success mx-1" %>
							<%= button_to 'Edit', edit_article_path(article), method: :get, class: "btn btn-outline-info mx-1" %>
							<%= button_to 'Delete', article_path(article), method: :delete, class: "btn btn-outline-danger mx-1" %>
						</div>
					</div>
					<div class="card-footer text-muted">
						<small>Created <%= time_ago_in_words(article.created_at) %> ago,
							Edited <%= time_ago_in_words(article.updated_at) %></small>
					</div>
			</div>
		</div>
	</div>
</div>

<% end %>

</div>
