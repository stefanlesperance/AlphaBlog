<h2 class = "text-center mt-4"><%= @article.title %></h2>
<div class = "container ">
	<div class="row justify-content-center">
		<div class="col-8 mt-4">
				<div class="card text-center shadow mb-5 bg-white rounded">
					<div class="card-header fst-italic">
						By <%= @article.user.username if @article.user%>
						<%= link_to gravatar_for(@article.user), user_path(@article.user) %>
					</div>
					<div class="card-body">
						<div class="card-text text-start"><%= simple_format(@article.description) %></div>
						<div class="btn-group" role="group" aria-label="Basic example">
							<% if logged_in? && (@article.user == current_user || current_user.admin? )%>
								<%= button_to 'Edit', edit_article_path(@article), method: :get, class: "btn btn-outline-info mx-1" %>
								<%= button_to 'Delete', article_path(@article), method: :delete, class: "btn btn-outline-danger mx-1" %>
							<% end%>
						</div>
					</div>
					<div class="card-footer text-muted">
						<small>Created <%= time_ago_in_words(@article.created_at) %> ago,
							Edited <%= time_ago_in_words(@article.updated_at) %></small>
					</div>
			</div>
		</div>
	</div>
</div>

